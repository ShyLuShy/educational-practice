<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:hapticFeedbackEnabled="true"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/textView"
        android:layout_width="342dp"
        android:layout_height="92dp"
        android:background="@color/light_gray"
        android:text="@string/main"
        android:textAlignment="center"

        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="336dp"
        android:layout_height="491dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.100000024">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button53"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/gameplay_guide"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button54"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/inventory_guide"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button55"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/shelter"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button56"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/Weapons"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button57"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/Loot"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button61"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/Bullets"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button62"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/Traders"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button63"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/Medecine"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button64"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/Maps"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>